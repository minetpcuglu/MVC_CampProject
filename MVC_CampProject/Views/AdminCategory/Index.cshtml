@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th> ADI</th>

        <th> Sil</th>
        <th> Güncelle</th>
        <th> Başlıklar</th>

    </tr>

    @foreach (var ctgr in Model)
    {
        <tr>

            <th>@ctgr.CategoryID</th>
            <td>@ctgr.CategoryName</td>

            <td><a href="/AdminCategory/DeleteCategory/@ctgr.CategoryID" class="btn btn-outline-danger"><b>Sil</b></a></td>
            <td><a href="/AdminCategory/UpdateCategoryPage/@ctgr.CategoryID" class="btn btn-outline-warning"><b>Güncelle</b></a></td>
            <td><a href="/Heading/CategoryByHeading/@ctgr.CategoryID" class="btn btn-outline-info"><b>Başlıklar</b></a></td>


        </tr>
    }
</table>
<br />
<a href="/AdminCategory/AddCategory" class="btn btn-outline-dark"> <b>kategori Ekle</b></a>
