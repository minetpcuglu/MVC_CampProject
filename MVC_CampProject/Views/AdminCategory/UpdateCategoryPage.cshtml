@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "UpdateCategoryPage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Kategori Güncelleme Sayfası</h2>
@using (Html.BeginForm("UpdateCategoryPage", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
       
        @Html.HiddenFor(x => x.CategoryID, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Kategori Adı ")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Kategori Açıklama ")
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
        <br />
        <button class="btn btn-outline-dark">Güncelle</button>
    </div>
    <br />
}
